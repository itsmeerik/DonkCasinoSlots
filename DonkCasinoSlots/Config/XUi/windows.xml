<?xml version="1.0" encoding="utf-8"?>
<config>
    <append xpath="/windows">
        <window_group name="workstation_cntCasinoSlot" extends="workstation_workbench">
            <window name="workstation_cntCasinoSlot" extends="workstation_workbench">
                <!-- Action bar with your two buttons -->
                <panel name="casino_actions" anchor="RightBottom" halign="right" valign="bottom"
                       width="360" height="40" depth="200" pad="8,4">
                    <button name="btnCasinoSpin"   width="130" height="36" pos="-260,0" text_key="uiCasinoSpin"/>
                    <button name="btnCasinoDouble" width="190" height="36" pos="-120,0" text_key="uiCasinoDouble"/>
                </panel>
            </window>
        </window_group>
    </append>

    <!-- Optional: header tweaks for OUR window only -->
    <set xpath="/windows/window_group[@name='workstation_cntCasinoSlot']/window[@name='workstation_cntCasinoSlot']/panel[@name='header']/sprite[@name='windowIcon']/@sprite">
        ui_game_symbol_vending
    </set>
    <set xpath="/windows/window_group[@name='workstation_cntCasinoSlot']/window[@name='workstation_cntCasinoSlot']/panel[@name='header']/label[1]/@text_key">
        workstation_casino_slot
    </set>
</config>
